    <style>/* ... (tous les styles CSS précédents) ... */
    :root {
        /* Votre nouvelle couleur principale */
        --primary-color: #0bf098;
        --dark-grey: #333;
        --light-grey: #f4f4f4;
    }

    body {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
        background-color: var(--light-grey);
    }

    main {
        flex: 1 0 auto;
    }

    /* CORRIGÉ : Une seule définition propre pour .hero */
    .hero {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        min-height: 100vh;
        position: relative;
        color: white;
        /* Le bon chemin vers votre image */
        background-image: url('/images/po.jpg'); 
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, .6);
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero .btn-large {
        transition: all .3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, .2);
    }

    .hero .btn-large:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, .3);
    }

    .section {
        padding: 5rem 1.5rem;
    }

    .section-title {
        font-weight: 300;
        margin-bottom: 1rem;
        display: inline-flex;
        align-items: center;
    }

    .section-title .material-icons {
        font-size: 2.5rem;
        margin-right: 1rem;
        color: var(--primary-color);
    }

    .section-card {
        background: white;
        padding: 3rem;
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, .1);
        margin-top: -80px;
        position: relative;
        z-index: 2;
    }

    .skill-chip {
        display: inline-flex;
        align-items: center;
        background-color: #e0e0e0;
        border-radius: 16px;
        padding: 8px 16px;
        margin: 5px;
        font-weight: 500;
        transition: all .3s ease;
    }

    .skill-chip:hover {
        transform: scale(1.05);
        background-color: var(--primary-color);
        color: white;
        /* CORRIGÉ : L'ombre correspond maintenant à votre couleur verte */
        box-shadow: 0 5px 15px rgba(11, 240, 152, 0.4);
    }

    .skill-chip .material-icons {
        font-size: 1.2rem;
        margin-right: 8px;
    }

    #contact .btn {
        width: 100%;
    }
    
    #contact .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, .2);
    }
</style>

